<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/viewOn"
        android:layout_width="389dp"
        android:layout_height="0dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rectangle_design_white"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/descriptionTextViewRecover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTextViewRecover"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/descriptionTextViewRecover"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingBottom="30dp"
        android:text="sdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdfsdffsdfsdf"
        android:textAlignment="viewStart"
        android:textColor="#A5A5A5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/titleTextViewRecover"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/titleTextViewRecover"
        app:layout_constraintTop_toBottomOf="@+id/titleTextViewRecover" />

    <EditText
        android:id="@+id/titleTextViewRecover"
        android:layout_width="270dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:background="#00D85353"
        android:backgroundTint="#00FF1414"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:paddingTop="10dp"
        android:text="Social apps"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/viewOn"
        app:layout_constraintHorizontal_bias="0.159"
        app:layout_constraintStart_toStartOf="@+id/viewOn"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="336dp"
        android:buttonTint="@color/brown_black"
        android:checked="false"
        android:elevation="12dp"
        android:scaleX="1.5"
        android:scaleY="1.5"

        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/descriptionTextViewRecover"
        app:layout_constraintStart_toStartOf="@+id/viewOn"
        app:layout_constraintTop_toTopOf="@+id/viewOn"
        app:layout_constraintVertical_bias="0.446" />

</androidx.constraintlayout.widget.ConstraintLayout>